<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>{{section.settings.custom_text_title}}</strong>
     {{section.settings.custom_text_body}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  <a class="btn-decline" href="https://allaboutdnt.com/">Decline</a>
</div>
<style>
	.alert {
        background : {{ section.settings.background-color }};
          color:{{ section.settings.font-color }};
    }
	.btn-decline {
    	background : {{ section.settings.decline-background-color }};
        color:{{ section.settings.decline-font-color }};
      	border:white solid 2px;
      	text-decoration: none;
      	padding: 10px 20px
    }
  	.btn-decline:hover {
    	opacity: 80%;
    }
</style>  

{% schema %}
{
    "name": "Cookie Banner",
    "tag": "section",
    "class": "index-section--flush",
    "settings": [{
            "id": "custom_text_title",
            "type": "text",
            "label": "Banner Title",
            "default": "Cookie Banner"
        },
        {
            "id": "custom_text_body",
            "type": "richtext",
            "label": "Banner Text",
			"default": "<p>You can browse details here</p>"
        },
        {
            "type": "color",
            "id": "background-color",
            "label": "Background Color",
            "default": "#FFD500"
        },
        {
            "type": "color",
            "id": "font-color",
            "label": "Font Color",
            "default": "#00296B"
        },

        {
            "type": "color",
            "id": "decline-background-color",
            "label": "Background Color",
            "default": "#FFD500"
        },
        {
            "type": "color",
            "id": "decline-font-color",
            "label": "Font Color",
            "default": "#00296B"
        }

    ],
    "presets": [{
        "name": "Cookie Banner",
        "category": "Custom"
    }]
}
{% endschema %}
